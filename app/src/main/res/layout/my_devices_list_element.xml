<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="@drawable/my_devices_list_element_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/myDevicesListElementImageView"
        android:contentDescription="@string/AvailableDeviceListImageDescription"
        android:src="@drawable/bluetooth_green_glow_sq64"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deviceNameTextView"
        android:textSize="18sp"
        android:text="@string/UniversalPlaceholderName"
        android:layout_marginStart="15dp"
        android:textColor="@color/fullWhiteTextColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/myDevicesListElementImageView"
        />




</androidx.constraintlayout.widget.ConstraintLayout>

