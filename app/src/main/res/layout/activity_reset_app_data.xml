<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="100dp"
        tools:context=".ResetAppDataActivity">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/resetAppActivityHeaderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ResetAppActivity_HeaderText"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/resetAppActivityHeaderSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/separatorColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resetAppActivityHeaderTextView" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/resetAppActivityDataToResetTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/ResetAppActivity_SelectDataActionText"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resetAppActivityHeaderSeparator" />

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/resetAppActivitySelectAllCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="@string/ResetAppActivity_SelectAllCheckBoxText"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resetAppActivityDataToResetTextView"
            tools:ignore="TouchTargetSizeCheck" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/resetAppActivityFirstSeparator"
            android:background="@color/separatorColor"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resetAppActivitySelectAllCheckBox"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/resetAppCheckBoxSubContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resetAppActivityFirstSeparator">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/resetAppActivityResetAppSettingsCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ResetAppActivity_ResetAppSettingsCheckBoxText"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TouchTargetSizeCheck" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/resetAppActivityResetAppSettingsCheckBoxHintTextView"
                android:text="@string/ResetAppActivity_ResetAppSettingsCheckBoxHint"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toBottomOf="@id/resetAppActivityResetAppSettingsCheckBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/resetAppActivityResetBindingDataCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/ResetAppActivity_ResetBindingDataCheckBoxText"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/resetAppActivityResetAppSettingsCheckBoxHintTextView"
                tools:ignore="TouchTargetSizeCheck" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/resetAppActivityResetBindingDataCheckBoxHintTextView"
                android:text="@string/ResetAppActivity_ResetBindingDataCheckBoxHint"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toBottomOf="@id/resetAppActivityResetBindingDataCheckBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />


            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/resetAppActivityResetUUIDProfilesCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/ResetAppActivity_ResetUUIDProfilesCheckBoxText"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/resetAppActivityResetBindingDataCheckBoxHintTextView"
                tools:ignore="TouchTargetSizeCheck" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/resetAppActivityResetUUIDProfilesCheckBoxHintTextView"
                android:text="@string/ResetAppActivity_ResetUUIDProfilesCheckBoxHint"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toBottomOf="@id/resetAppActivityResetUUIDProfilesCheckBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />


            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/resetAppActivityResetDefaultBindingKeyCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/ResetAppActivity_ResetDefaultBindingKeyCheckBoxText"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/resetAppActivityResetUUIDProfilesCheckBoxHintTextView"
                tools:ignore="TouchTargetSizeCheck" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/resetAppActivityResetDefaultBindingKeyCheckBoxHintTextView"
                android:text="@string/ResetAppActivity_ResetDefaultBindingKeyCheckBoxHint"
                android:layout_marginStart="30dp"
                app:layout_constraintTop_toBottomOf="@id/resetAppActivityResetDefaultBindingKeyCheckBox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/resetAppActivitySecondSeparator"
            android:background="@color/separatorColor"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resetAppCheckBoxSubContainer"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/resetAppActivityButtonContainer"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resetAppActivitySecondSeparator"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resetAppActivityCancelButton"
                android:textSize="20sp"
                android:text="@string/ResetAppActivity_CancelButtonText"
                android:onClick="resetAppActivityOnCancelButtonClick"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resetAppActivityResetButton"
                android:textSize="20sp"
                android:text="@string/ResetAppActivity_ResetButtonText"
                android:onClick="resetAppActivityOnResetButtonClick"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resetAppActivityNotificationTextView"
            android:textColor="@color/goldAccentColor"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resetAppActivityButtonContainer"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>