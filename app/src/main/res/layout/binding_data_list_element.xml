<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/binding_data_list_element_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:id="@+id/bindingDataListElementFirstStartSeparator"
        android:background="@color/max_contrast_text_color"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:id="@+id/bindingDataListElementSecondStartSeparator"
        android:background="@color/max_contrast_text_color"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bindingDataListElementFirstStartSeparator"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bindingDataListElementDescriptorContainer"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bindingDataListElementSecondStartSeparator"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:id="@+id/bindingDataListElementDeviceNameDescriptorTextView"
            android:text="@string/BindingManagerActivity_ListElementDeviceName"
            android:gravity="center"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:id="@+id/bindingDataListElementMacAddressDescriptorTextView"
            android:text="@string/BindingManagerActivity_ListElementMacAddress"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bindingDataListElementDeviceNameDescriptorTextView"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:text="@string/BindingManagerActivity_ListElementBindingType"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bindingDataListElementMacAddressDescriptorTextView"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bindingDataListElementDescriptorContainer"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:id="@+id/bindingDataListElementDeviceNameTextView"
            android:text="@string/UniversalPlaceholderName"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/max_contrast_text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:id="@+id/bindingDataListElementMacAddressTextView"
            android:text="@string/UniversalPlaceholderName"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            android:textColor="@color/max_contrast_text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bindingDataListElementDeviceNameTextView"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:id="@+id/bindingDataListElementBindingTypeTextView"
            android:text="@string/UniversalPlaceholderName"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:textColor="@color/max_contrast_text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bindingDataListElementMacAddressTextView"
            app:layout_constraintBottom_toBottomOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>



