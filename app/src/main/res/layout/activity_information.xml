                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/infoActivityTwelfthSeparator"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="@color/separatorColor"
                app:layout_constraintTop_toBottomOf="@id/infoActivityTermsOfServiceChangesContentTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/infoActivityTermsOfServiceContactHeaderTextView"
                android:textSize="@dimen/infoActivity_textSize_bigParagraphSubHeadlineText"
