<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.laroomysoft.laroomy.InformationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/infoActivityHeaderLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blackBackgroundColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/infoActivityHeaderImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/laroomy_icon_sq64"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/infoActivityHeaderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/InfoActivity_HeaderText"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/goldAccentColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/infoActivityHeaderImageView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/infoActivityHeaderSeparatorView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/separatorColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoActivityHeaderLayout" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/infoActivityAppDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/InfoActivity_AppDescription"
        android:textSize="18sp"
        android:textColor="@color/goldAccentColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoActivityHeaderSeparatorView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/infoActivityAppVersionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:textColor="@color/goldAccentColor"
        android:text="@string/app_version"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoActivityAppDescriptionTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/infoActivityCopyrightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/InfoActivity_CopyrightLaroomySoft"
        android:textSize="16sp"
        android:textColor="@color/goldAccentColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoActivityAppVersionTextView" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/infoActivityRightsReservedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/InfoActivity_AllRightsReserved"
        android:textSize="16sp"
        android:textColor="@color/goldAccentColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/infoActivityCopyrightTextView" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/infoActivityMailToTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/clickableTextColor"
            android:textSize="20sp"
            android:text="@string/InfoActivity_MailTo"
            android:onClick="onMailToLinkClick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/infoActivityRightsReservedTextView"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/infoActivitySecondSeparator"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/separatorColor"
            app:layout_constraintTop_toBottomOf="@id/infoActivityMailToTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/infoActivityThirdSeparator"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:background="@color/separatorColor"
            app:layout_constraintTop_toBottomOf="@id/infoActivitySecondSeparator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/infoActivityPrivacyPolicyContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/infoActivityThirdSeparator"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/infoActivityPrivacyPolicyHeaderTextView"
                android:textSize="@dimen/infoActivity_textSize_bigParagraphMainHeadlineText"
                android:text="@string/InfoActivity_PrivacyPolicyHeader"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textColor="@color/goldAccentColor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/infoActivityPrivacyPolicyContentTextView"
                android:textSize="@dimen/infoActivity_textSize_bigParagraphText"
                android:text="@string/InfoActivity_PrivacyPolicy_Text"
                android:layout_marginTop="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textAlignment="center"
                android:textColor="@color/goldAccentColor"
                android:lineSpacingExtra="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/infoActivityPrivacyPolicyHeaderTextView"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/infoActivityFourthSeparator"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="@color/separatorColor"
                app:layout_constraintTop_toBottomOf="@id/infoActivityPrivacyPolicyContentTextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/infoActivityICUHeaderTextView"
                android:textSize="@dimen/infoActivity_textSize_bigParagraphSubHeadlineText"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="@string/InfoActivity_PP_InformationCollectionAndUse_Header"
                android:layout_marginTop="10dp"
                android:textColor="@color/goldAccentColor"
                app:layout_constraintTop_toBottomOf="@id/infoActivityFourthSeparator"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/infoActivityICUContentTextView"
                android:textSize="@dimen/infoActivity_textSize_bigParagraphText"
                android:text="@string/InfoActivity_PP_InformationCollectionAndUse_Text"
                android:layout_marginTop="10dp"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textAlignment="center"
                android:textColor="@color/goldAccentColor"
                android:lineSpacingExtra="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/infoActivityICUHeaderTextView"
