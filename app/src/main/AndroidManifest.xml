<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.laroomysoft.laroomy">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:name="com.laroomysoft.laroomy.ApplicationProperty"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.laroomysoft.laroomy.ExtendedLevelSelectorControl"
            android:screenOrientation="nosensor">
        </activity>
        <activity
            android:name="com.laroomysoft.laroomy.RGBControlActivity"
            android:screenOrientation="nosensor">
        </activity>
        <activity
            android:name="com.laroomysoft.laroomy.DeviceMainActivity"
            android:label="@string/DeviceMainActivity"
            android:screenOrientation="nosensor">
        </activity>
        <activity
            android:name="com.laroomysoft.laroomy.LoadingActivity"
            android:label="@string/LoadingActivityLabel"
            android:screenOrientation="nosensor">
        </activity>
        <activity android:name="com.laroomysoft.laroomy.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>